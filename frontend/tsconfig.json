{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ESNext",

    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    // Type Checking & Safety
    "strict": true,
    "types": ["vite/client"],

    // Aliases
    "baseUrl": "./src",
    "paths": {
      "$lib/*": ["./lib/*"],
      "$components/*": ["./components/*"],
      "$views/*": ["./views/*"]
    }
  }
}
